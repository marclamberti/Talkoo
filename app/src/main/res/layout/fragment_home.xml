<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mobile.marc.talkoo.NavigatorActivity$HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/button_home_create_group"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/button_home_create_group"
            android:layout_margin="5dp"
            flatui:fl_theme="@array/candy"
            flatui:fl_blockButtonEffectHeight="3dp"
            />

        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/button_home_find_peers"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/button_home_find_peers"
            android:layout_margin="5dp"
            flatui:fl_theme="@array/candy"
            flatui:fl_blockButtonEffectHeight="3dp"
            />

    </LinearLayout>

</RelativeLayout>
